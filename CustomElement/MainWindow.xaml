<Window x:Class="CustomElement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomElement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="local:Card">
            <Setter Property="Scale" Value="0.5"/>
        </Style>
    </Window.Resources>


    <Grid>
        <Button x:Name="AddCardButton" Content="DrawCard" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="AddCardButton_Click"/>
        <StackPanel x:Name="CardStack" Orientation="Horizontal">

            <local:Card cardSuits="CLUBS" CardValue="K"/>
            <local:Card cardSuits="DIAMONDS" CardValue="Q"/>
        </StackPanel>
    </Grid>
</Window>
